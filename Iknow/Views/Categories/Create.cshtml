@model Iknow.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @ViewData["max"]
        <form asp-action="Create"  autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <textarea asp-for="description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <!--<div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="locked" /> @Html.DisplayNameFor(model => model.locked)
                    </label>
                </div>
            </div>-->
            <div class="form-group">

                @if (ViewData["max"] == null)
                {
                    <input type="submit" value="Create" class="btn btn-default"  />
                }else
                {
                    <input type="submit" value="Create" class="btn btn-default" disabled/>
                }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
